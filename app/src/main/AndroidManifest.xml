<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nightcoder.mothercare">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MotherCare">
        <activity android:name=".AddAppointmentActivity"></activity>
        <activity android:name=".VendorViewActivity" />
        <activity
            android:name=".EditVendorActivity"
            android:theme="@style/AdminStyle" />
        <activity android:name=".OpenVendorActivity" />
        <activity
            android:name=".AddVendorActivity"
            android:theme="@style/AdminStyle" />
        <activity android:name=".VendorActivity" />
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".AdminActivity"
            android:theme="@style/AdminStyle" />
        <activity android:name=".SignActivity" />
        <activity
            android:name=".UserActivity"
            android:theme="@style/AdminStyle" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>